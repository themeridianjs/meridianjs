{
  "name": "@meridian/framework",
  "version": "0.1.0",
  "description": "Core Meridian framework: bootstrap, DI container, module/route/subscriber/job loaders",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@meridian/framework-utils": "*",
    "@meridian/types": "*",
    "awilix": "^12.0.5",
    "cors": "^2.8.5",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "tsup": "^8.3.5",
    "tsx": "4.21.0",
    "typescript": "*"
  },
  "files": [
    "dist"
  ]
}
