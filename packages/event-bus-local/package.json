{
  "name": "@meridian/event-bus-local",
  "version": "0.1.0",
  "description": "Local in-process event bus for Meridian (development/testing)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@meridian/types": "*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "*"
  },
  "files": [
    "dist"
  ]
}
