{
  "name": "@meridianjs/meridian",
  "version": "0.1.0",
  "description": "Default API routes, workflows, links, and subscribers for Meridian applications",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --outDir dist --declaration --declarationMap --sourceMap && node -e \"const fs=require('fs');fs.writeFileSync('dist/package.json',JSON.stringify({type:'module'}))\"",
    "dev": "tsc --outDir dist --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@meridianjs/framework-utils": "^0.1.0",
    "@meridianjs/workflow-engine": "^0.1.0",
    "@meridianjs/types": "^0.1.1",
    "@meridianjs/workspace": "^0.1.0",
    "@meridianjs/project": "^0.1.0",
    "@meridianjs/issue": "^0.1.0",
    "@meridianjs/sprint": "^0.1.0",
    "multer": "^1.4.5-lts.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/multer": "^1.4.12",
    "@types/express": "^5.0.0",
    "tsup": "^8.3.5",
    "tsx": "4.21.0",
    "typescript": "*"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
